{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "styles/*": [
        "./src/styles/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "mocks/*": [
        "./src/mocks/*"
      ],
      "models/*": [
        "./src/models/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "enums/*": [
        "./src/enums/*"
      ],
      "constants/*": [
        "./src/constants/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "tools/*": [
        "./src/tools/*"
      ],
      "routers/*": [
        "./src/routers/*"
      ],
      "routes/*": [
        "./src/routes/*"
      ],
      "store/*": [
        "./src/store/*"
      ],
      "hocs/*": [
        "./src/hocs/*"
      ],
      "hooks/*": [
        "./src/hooks/*"
      ],
      "layouts/*": [
        "./src/layouts/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "portals/*": [
        "./src/portals/*"
      ],
      "components/*": [
        "./src/components/*"
      ]
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}